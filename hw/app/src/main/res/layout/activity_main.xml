<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/pic1"/>

    <TextView
        android:id="@+id/textQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:padding="8dp"
        android:text="QUANTITY"
        android:textColor="#fff"
        android:textSize="32sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_min_quantity"
        android:text="-"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textQuantity"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:shadowColor="@color/colorPrimaryDark"
        android:onClick="changeQuantity"/>

    <TextView
        android:id="@+id/quantity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="0"
        android:layout_below="@id/textQuantity"
        android:layout_toRightOf="@id/button_min_quantity"
        android:textColor="#000"
        android:textSize="32sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_max_quantity"
        android:text="+"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textQuantity"
        android:layout_toRightOf="@id/quantity_text_view"
        android:layout_marginTop="8dp"
        android:shadowColor="@color/colorPrimaryDark"
        android:onClick="changeQuantity"/>

    <TextView
        android:id="@+id/textPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:padding="8dp"
        android:text="PRICE"
        android:layout_below="@id/quantity_text_view"
        android:textColor="#fff"
        android:textSize="32sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="0"
        android:layout_below="@id/textPrice"
        android:textColor="#000"
        android:textSize="32sp"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_below="@id/price_text_view"
        android:shadowColor="@color/colorPrimaryDark"
        android:text="Whisper"
        android:onClick="submitOrder"/>


</RelativeLayout>