<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/fon"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/TeamA"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/name_teamA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif"
                android:padding="8dp"
                android:text="Team A"
                android:textColor="#fff"
                android:textSize="32sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/scoreTeamA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif"
                android:layout_marginTop="-20dp"
                android:layout_marginBottom="-20dp"
                android:shadowColor="@color/colorPrimaryDark"
                android:text="0"
                android:textColor="#fff"
                android:textSize="128sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonPlusThreeA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="1dp"
                android:onClick="changeQuantity"
                android:shadowColor="@color/colorPrimaryDark"
                android:text="+3 points"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/buttonPlusTwoA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="1dp"
                android:onClick="changeQuantity"
                android:shadowColor="@color/colorPrimaryDark"
                android:text="+2 points"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/buttonPlusOneA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="1dp"
                android:onClick="changeQuantity"
                android:shadowColor="@color/colorPrimaryDark"
                android:text="+1 points"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/TeamB"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/name_teamB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif"
                android:padding="8dp"
                android:text="Team B"
                android:textColor="#fff"
                android:textSize="32sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/scoreTeamB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif"
                android:layout_marginTop="-20dp"
                android:layout_marginBottom="-20dp"
                android:shadowColor="@color/colorPrimaryDark"
                android:text="0"
                android:textColor="#fff"
                android:textSize="128sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/buttonPlusThreeB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="1dp"
                android:onClick="changeQuantity"
                android:shadowColor="@color/colorPrimaryDark"
                android:text="+3 points"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/buttonPlusTwoB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="1dp"
                android:onClick="changeQuantity"
                android:shadowColor="@color/colorPrimaryDark"
                android:text="+2 points"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/buttonPlusOneB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="1dp"
                android:onClick="changeQuantity"
                android:shadowColor="@color/colorPrimaryDark"
                android:text="+1 points"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:onClick="Reset"
        android:padding="20dp"
        android:text="Reset"
        android:textStyle="bold"/>

</RelativeLayout>